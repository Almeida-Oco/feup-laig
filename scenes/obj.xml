<SCENE>

	<!-- Initial values -->
	<INITIALS>
		<frustum near="0.1" far="500"/>
		<translation x="-1" y="1" z="0"/>
		<rotation axis="x" angle="0" />
		<rotation axis="y" angle="0" />
		<rotation axis="z" angle="0" />
		<scale sx="0.25" sy="0.25" sz="0.25" />
		<reference length="5" />
	</INITIALS>

	<!-- Illumination and clear color -->
	<ILLUMINATION>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0" g="0" b="0" a="1" />
	</ILLUMINATION>

	<!-- Lights -->
	<LIGHTS>
		<LIGHT id="light0">
			<enable value ="1" />
			<position  x="0" y="10" z="0" w="1" />
			<ambient r="1.00" g="1.0" b="1.0" a="1.0" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
			<specular r="1.0" g="1.0" b="1.0" a="1.0" />
		</LIGHT>
	</LIGHTS>

	<TEXTURES>
		<!-- Rocks -->
		<TEXTURE id="rocks">
			<file path="images/rocks.jpg" />
			<amplif_factor s="1" t="1" />
		</TEXTURE>

		<!-- New york floor bench -->
		<TEXTURE id="nwfloor">
			<file path="images/nwfloor.jpg" />
			<amplif_factor s="1" t="1" />
		</TEXTURE>

	</TEXTURES>

	<MATERIALS>
		<MATERIAL id="piramide">
			<shininess value="1" />
			<specular r="0" g="0" b="0" a="1" />
			<diffuse r="1.0" g="0.68" b="0.4" a="1" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<emission r="0.0" g="0.0" b="0.0" a="1" />
		</MATERIAL>
	</MATERIALS>

	<!-- The nodes -->
	<NODES>
		<ROOT id="root" />

		<NODE id="root">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<NODEREF id="obj"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="obj" >
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>
			<TRANSLATION x="10" y="10" z="10"/>
			<DESCENDANTS>
				<LEAF type="wave_obj" args="suzane_tx.obj"/>
			</DESCENDANTS>
		</NODE>

	</NODES>
</SCENE>
