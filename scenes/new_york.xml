<SCENE>

	<!-- Initial values -->
	<INITIALS>
		<frustum near="0.1" far="500"/>
		<translation x="-1" y="1" z="0"/>
		<rotation axis="x" angle="0" />
		<rotation axis="y" angle="0" />
		<rotation axis="z" angle="0" />
		<scale sx="0.25" sy="0.25" sz="0.25" />
		<reference length="5" />
	</INITIALS>

	<!-- Illumination and clear color -->
	<ILLUMINATION>
		<ambient r="0.2" g="0.2" b="0.2" a="1" />
		<background r="0" g="0" b="0" a="1" />
	</ILLUMINATION>

	<!-- Lights -->
	<LIGHTS>
		<LIGHT id="light0">
			<enable value ="1" />
			<position  x="0" y="10" z="0" w="1" />
			<ambient r="1.0" g="1.0" b="1.0" a="1.0" />
			<diffuse r="1.0" g="1.0" b="1.0" a="1.0" />
			<specular r="1.0" g="1.0" b="1.0" a="1.0" />
		</LIGHT>
	</LIGHTS>

	<TEXTURES>
		<!-- Rocks -->
		<TEXTURE id="rocks">
			<file path="images/rocks.jpg" />
			<amplif_factor s="1" t="1" />
		</TEXTURE>
	</TEXTURES>

	<MATERIALS>
		<MATERIAL id="piramide">
			<shininess value="1" />
			<specular r="0" g="0" b="0" a="1" />
			<diffuse r="1.0" g="0.68" b="0.4" a="1" />
			<ambient r="0.2" g="0.2" b="0.2" a="1" />
			<emission r="0.0" g="0.0" b="0.0" a="1" />
		</MATERIAL>
	</MATERIALS>

	<!-- The nodes -->
	<NODES>
		<ROOT id="root" />

		<NODE id="root">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<NODEREF id="helices"/>
				<NODEREF id="corpo"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="helices" >
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<ROTATION axis="y" angle="180" />
			<SCALE sx="1" sy="1" sz="1" />

			<DESCENDANTS>
				<NODEREF id="topo"/>
				<NODEREF id="cauda"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="topo" >
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<NODEREF id="hel1"/>
				<NODEREF id="hel2"/>
				<NODEREF id="hel3"/>
				<NODEREF id="hel4"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="hel1">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<LEAF type="rectangle" args="10 0 12 6"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="hel2">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<ROTATION axis="z" angle="90"/>

			<DESCENDANTS>
				<LEAF type="rectangle" args="10 0 12 6"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="hel3">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<ROTATION axis="z" angle="-90"/>

			<DESCENDANTS>
				<LEAF type="rectangle" args="10 0 12 6"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="hel4">
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<ROTATION axis="z" angle="180"/>

			<DESCENDANTS>
				<LEAF type="rectangle" args="10 0 12 6"/>
			</DESCENDANTS>
		</NODE>

		<NODE id="cauda" >
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<LEAF type="patch" orderU="4" orderV="5" partsU="20" partsV="20" >
					<controlpoint x="-0.15" y="0" z="-4" />
					<controlpoint x="-0.1" y="0" z="-4" />
					<controlpoint x="0.1" y="0" z="-4" />
					<controlpoint x="0.15" y="0" z="-4" />
					<controlpoint x="0.1" y="0" z="-4" />
					<controlpoint x="-0.1" y="0" z="-4" />

					<controlpoint x="-1.5" y="0" z="-2" />
					<controlpoint x="-1.25" y="0.5" z="-2" />
					<controlpoint x="1.25" y="0.5" z="-2" />
					<controlpoint x="1.5" y="0" z="-2" />
					<controlpoint x="1.25" y="-0.5" z="-2" />
					<controlpoint x="-1.25" y="-0.5" z="-2" />

					<controlpoint x="-3" y="0" z="0" />
					<controlpoint x="-2.5" y="1" z="0" />
					<controlpoint x="2.5" y="1" z="0" />
					<controlpoint x="3" y="0" z="0" />
					<controlpoint x="2.5" y="-1" z="0" />
					<controlpoint x="-2.5" y="-1" z="0" />

					<controlpoint x="-1.5" y="0" z="2" />
					<controlpoint x="-1.25" y="0.5" z="2" />
					<controlpoint x="1.25" y="0.5" z="2" />
					<controlpoint x="1.5" y="0" z="2" />
					<controlpoint x="1.25" y="-0.5" z="2" />
					<controlpoint x="-1.25" y="-0.5" z="2" />

					<controlpoint x="-0.15" y="0" z="4" />
					<controlpoint x="-0.1" y="0" z="4" />
					<controlpoint x="0.1" y="0" z="4" />
					<controlpoint x="0.15" y="0" z="4" />
					<controlpoint x="0.1" y="0" z="4" />
					<controlpoint x="-0.1" y="0" z="4" />

				</LEAF>
			</DESCENDANTS>
		</NODE>

		<NODE id="corpo" >
			<MATERIAL id="piramide"/>
			<TEXTURE id="rocks"/>

			<DESCENDANTS>
				<LEAF type="rectangle" args="2 4 2 4" />
			</DESCENDANTS>
		</NODE>

	</NODES>
</SCENE>
